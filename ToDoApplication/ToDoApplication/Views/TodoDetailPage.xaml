<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ToDoApplication.Views.TodoDetailPage">
	<StackLayout Padding="10">
		<Label Text="Task Details" FontSize="Large" HorizontalOptions="Center"/>

		<Label Text="{Binding Title}" FontSize="Medium"/>
		<Label Text="{Binding Description}" FontSize="Small" Margin="10,0"/>

	</StackLayout>
</ContentPage>
